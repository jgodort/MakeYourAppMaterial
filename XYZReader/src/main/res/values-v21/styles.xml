<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/dark_orange_accent</item>
        <item name="android:windowBackground">@color/teal_300</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit_image</item>
        <item name="android:windowReenterTransition">@transition/grid_reenter_image</item>
    </style>

    <style name="AppTheme.Details" parent="@style/AppTheme">
        <item name="android:windowEnterTransition">@transition/detail_enter_transition</item>
    </style>
</resources>